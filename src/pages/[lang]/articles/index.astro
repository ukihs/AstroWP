---
import Layout from "../../../layouts/Layout.astro";
import { wpQuery } from "../../../lib/wp";
import ARTICLES from "../../../queries/articles";
import { rewriteWpUrl } from "../../../lib/wpUrl";

// สร้าง static paths สำหรับสองภาษา
export function getStaticPaths() {
  return [{ params: { lang: "th" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params; // "th" | "en"
const LANG_ENUM = (lang ?? "th").toUpperCase(); // "TH" | "EN"
const FIRST = 12;

const data = await wpQuery<{ posts: { nodes: any[] } }>(ARTICLES, {
  lang: LANG_ENUM,
  first: FIRST,
});
const posts = data?.posts?.nodes ?? [];

function pickImageUrl(node?: any): string | undefined {
  if (!node) return undefined;
  const medium =
    node?.mediaDetails?.sizes?.find?.((s: any) => s?.name === "medium");
  return medium?.sourceUrl || node?.sourceUrl;
}
---

<Layout lang={lang} showNavLinks={false}>
  <section class="mx-auto max-w-6xl px-6 py-10 sm:py-14">
    <div class="mb-6 flex items-center justify-between">
      <h1 class="text-3xl font-bold">
        {lang === "en" ? "Articles" : "บทความ"}
      </h1>
      <a href={`/${lang}`} class="text-sky-600 hover:underline">
        {lang === "en" ? "Back to home" : "กลับหน้าแรก"}
      </a>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {posts.map((post) => {
        const img = rewriteWpUrl(pickImageUrl(post?.featuredImage?.node));
        const href = `/${lang}/articles/${post.slug}`;

        return (
          <article class="overflow-hidden rounded-xl border bg-white shadow-sm">
            <a href={href} aria-label={post.title}>
              {img && (
                <img
                  src={img}
                  alt={post.title}
                  class="aspect-[16/9] w-full object-cover"
                  loading="lazy"
                />
              )}
            </a>
            <div class="p-4">
              <a
                href={href}
                class="text-lg font-semibold line-clamp-2 hover:underline"
              >
                {post.title}
              </a>
              {post.excerpt && (
                <p
                  class="mt-1 text-sm text-slate-600 line-clamp-2"
                  set:html={post.excerpt}
                />
              )}
              <a
                href={href}
                class="mt-3 inline-block rounded-md border px-3 py-1.5 text-sm hover:bg-slate-50"
              >
                {lang === "en" ? "Read more" : "อ่านต่อ"}
              </a>
            </div>
          </article>
        );
      })}
    </div>
  </section>
</Layout>
